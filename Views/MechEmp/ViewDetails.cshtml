@model MyMVCMappingDEMO.Models.MechEmployee

@{
    ViewData["Title"] = "View Student Details";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow" style="width: 28rem; border-radius: 1rem;">
        <div class="card-header bg-primary text-white text-center" style="border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
            <h4 class="mb-0">Student Details</h4>
        </div>
        <div class="card-body text-center">
            <div class="mb-3">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Student Image" class="spin-hover-3d" width="120" height="120" style="object-fit:cover;" />
                }
                else
                {
                    <span class="badge bg-secondary">No Image</span>
                }
            </div>
            <h3 class="fw-bold mb-1">@Model.MName</h3>
            <div class="mb-2">
                <span class="badge bg-info text-dark">@Model.MYearPassed</span>
                <span class="badge bg-warning text-dark">@Model.MDepartment</span>
            </div>
            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item"><strong>Email:</strong> @Model.MEmail</li>
                <li class="list-group-item"><strong>Contact:</strong> @Model.MPhone</li>
                <li class="list-group-item"><strong>Company Working:</strong> @Model.MCompany</li>
                <li class="list-group-item"><strong>Note</strong> @Model.MNotes?</li>
                <li class="list-group-item"><strong>Address:</strong> @Model.MAddress</li>
            </ul>
            <div class="d-flex justify-content-center gap-2">
                <a asp-action="Edit" asp-route-id="@Model.MId" class="btn btn-outline-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.MId" class="btn btn-outline-danger btn-sm">Delete</a>
                <a asp-action="ViewEmp" class="btn btn-secondary btn-sm">Back</a>
            </div>
        </div>
    </div>
</div>