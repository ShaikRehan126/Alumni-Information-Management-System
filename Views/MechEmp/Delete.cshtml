@model MyMVCMappingDEMO.Models.MechEmployee
@{
    ViewData["Title"] = "Delete Student";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card border-danger shadow" style="width: 28rem;">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Student</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Are you sure you want to delete this Student? This action cannot be undone.</p>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MId" />
                <div class="mb-3">
                    <label asp-for="MRollNo" class="form-label">Roll Number</label>
                    <input asp-for="MRollNo" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="MName" class="form-label">Name</label>
                    <input asp-for="MName" class="form-control" readonly />
                </div>
                <div class="d-flex justify-content-between">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                    <a asp-action="ViewEmp" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>