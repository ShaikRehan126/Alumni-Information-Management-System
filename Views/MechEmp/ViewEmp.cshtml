@model List<MyMVCMappingDEMO.Models.MechEmployee>
@{
    ViewData["Title"] = "View Students";
    var currentFilter = ViewData["CurrentFilter"] as string;
    var searchBy = ViewData["SearchBy"] as string;
}
<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-1">Student Directory</h3>
        <form asp-action="ViewEmp" method="get" class="d-flex align-items-center gap-2 mb-0">
            <select name="searchBy" class="form-select form-select-sm">
                <option value="Name" selected="@(searchBy == "Name")">Name</option>
                <option value="Mobile" selected="@(searchBy == "Mobile")">Mobile</option>
                <option value="Department" selected="@(searchBy == "Department")">Department</option>
                <option value="Email" selected="@(searchBy == "Email")">Email</option>
                <option value="YearPassed" selected="@(searchBy == "YearPassed")">Year</option>
            </select>
            <input type="text" name="searchString" value="@currentFilter" class="form-control form-control-sm" placeholder="Search students..." />
            <button type="submit" class="btn btn-light btn-sm fw-bold">Search</button>
            <a asp-action="ViewEmp" class="btn btn-outline-light btn-sm">Reset</a>
        </form>
        <a asp-action="AddEmp" class="btn btn-light btn-sm fw-bold">+ Add Student</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Profile</th>
                        <th>Roll Number</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(emp.ImagePath))
                                {
                                    <img src="@emp.ImagePath" alt="Student Image" class="rounded-circle border" width="50" height="50" style="object-fit:cover;" />
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No Image</span>
                                }
                            </td>
                            <td>@emp.MRollNo</td>
                            <td class="fw-semibold">@emp.MName</td>
                            <td>@emp.MEmail</td>
                            <td>@emp.MPhone</td>
                            <td><span class="badge bg-warning text-dark">@emp.MDepartment</span></td>
                            <td>
                                <a asp-action="ViewDetails" asp-route-id="@emp.MId" class="btn btn-outline-success btn-sm me-1">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
