@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="page-center">
    <div class="card-main" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <h2 class="card-title-main mb-2">Welcome Back</h2>
            <p class="text-muted mb-0">Sign in to your account</p>
        </div>
        <form id="account" method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.UserNameOrEmail" class="form-control" autocomplete="off" aria-required="true" placeholder="Username or Email" />
                <label asp-for="Input.UserNameOrEmail" class="form-label">Username or Email</label>
                <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="off" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
                